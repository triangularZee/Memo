#include <iostream>
#include <vector>

using namespace std;

int N, M;

int main(){
    cin >> N >> M;
    vector<int> arr;
    
    for(int i=0; i<N; i++){
        int k;
        cin >> k;
        arr.push_back(k);
    }
    
    int left = 0, right = 0, cnt = 0;
    int sum = 0;
    
    while(left <= right && right <= N){ // right <= N 에서 < '=' 이부분이 있어야한다. 
        if(sum < M) {
            sum += arr[right++];
        }
        else if(sum >= M){
            if(sum == M) cnt++;
            sum -= arr[left++];
        }
    }
    
    cout << cnt;
    return 0;
}
