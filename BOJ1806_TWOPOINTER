#include <iostream>
#include <vector>
#include <map>
using namespace std;

int N, M;
map<int,int> checker;

int main(){
    cin >> N >> M;
    vector<int> arr;
    
    for(int i=0; i<N; i++){
        int k;
        cin >> k;
        arr.push_back(k);
    }
    
    int left = 0, right = 0, cnt = 0;
    int sum = 0;
    
    while(left <= right && right <= N){
        if(sum < M) {
            sum += arr[right++];
        }
        else if(sum >= M){
            checker[right-left]++;
            sum -= arr[left++];
        }
    }
    if(checker.empty()) { cout << 0; return 0;}
    cout << checker.begin()->first;
    return 0;
}
